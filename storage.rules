rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // The RAW_BUCKET should be private. Only authenticated service accounts (Cloud Run) or admins can write.
    match /raw-archive/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }

    // The IMAGE_BUCKET is public for reads, but writes are restricted.
    match /product-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
